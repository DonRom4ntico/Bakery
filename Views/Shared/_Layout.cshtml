<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarlBakerzShop</title>
    <link rel="icon" href="/images/bakershat.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarlBakerzShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    
    <!-- Google font link -->
    <!-- Sevilla cursive-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Sevillana&display=swap" rel="stylesheet">
    <!-- Montserrat-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Sevillana&display=swap" rel="stylesheet">

    <style>
        body{
            background-color:#E0F7FA;
            font-family: "Montserrat", sans-serif;
            font-weight: bold;
        }
        .font-moserrat{
            font-family: "Montserrat", sans-serif;
            font-weight: bold;
        }
        .title-header {
            color: black;
            font-weight: bolder;
            font-family: "Sevillana", cursive;
            transition: all 0.5s ease;
        }

        .title-header:hover {
             margin: 3px;
             padding: 3px;
        }
        .button-header-home{
            font-size: 20px;
            font-weight: bolder;
            font-family: "Montserrat", sans-serif;
            transition: all 0.5s ease;
        }

        .button-header-home:hover {
            background-color: #E09F69;
            border-radius: 15px;
            margin: 5px;
        }

        .button-header-store {
            font-size: 20px;
            font-weight: bolder;
            font-family: "Montserrat", sans-serif;
            transition: all 0.5s ease;
        }

            .button-header-store:hover {
                background-color: #E09F69;
                border-radius: 15px;
                margin: 5px;
            }

        .button-header-privacy{
            font-size: 20px;
            font-weight: bolder;
            font-family: "Montserrat", sans-serif;
            transition: all 0.5s ease;
        }

        .button-header-privacy:hover {
            background-color: #E09F69;
            border-radius:15px;
            margin: 5px;
        }

        .button-header {
            font-weight: bolder;
            font-family: "Montserrat", sans-serif;
            transition: all 0.5s ease;
        }

        .bg-default {
            background-color: #FFAB91;
        }
        .bg-overall-bg {
            background-color: #E0F7FA;
        }
    </style>
</head>



<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="" src="/images/bakershat.jpg" alt="..." width="50" class="me-2" /> 
                    <span class="title-header fs-4 fw-bolder">
                        CarlBakerzShop
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="button-header-home nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="button-header-store nav-link text-dark" asp-area="" asp-controller="Store" asp-action="Index">Store</a>
                        </li>
                        <li class="nav-item">
                            <a class="button-header-privacy nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="button-header nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="button-header dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                                <li><a class="button-header dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Profile</a></li>
                                <li><hr class="button-header dropdown-divider"></li>
                                <li><a class="button-header dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Logout</a></li>
                            </ul>
                        </li>

                    </ul>              
                </div>
            </div>
        </nav>
    </header>
    @if(ViewData["Home Page"] == null){
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            <img src="/images/bakershat.jpg" alt="..." width="40" class="me-2" />
            &copy; 2024 - CarlBakerzShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
